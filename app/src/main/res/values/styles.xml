<resources>

    <!-- Base dark theme -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Colors for dark theme -->
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryDark">@color/darkPrimaryDark</item>
        <item name="colorAccent">@color/darkAccent</item>
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="android:textColorPrimary">@color/darkText</item>
        <item name="android:navigationBarColor">@color/darkPrimaryDark</item>
        <item name="android:statusBarColor">@color/darkPrimaryDark</item>
    </style>

    <!-- AppTheme still points to base -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <!-- Optional: NoActionBar variant -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryDark">@color/darkPrimaryDark</item>
        <item name="colorAccent">@color/darkAccent</item>
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="android:textColorPrimary">@color/darkText</item>
    </style>

</resources>
